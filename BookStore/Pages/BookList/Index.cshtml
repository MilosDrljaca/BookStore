@page
@model BookStore.Pages.BookList.IndexModel

<head>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:900|Work+Sans:300" rel="stylesheet">
    <style>
        body {
            font-family: 'Work Sans', sans-serif;
            font-weight: 300;
        }

        h2 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 900;
            color: #a9a9a9;
        }
        .form-control {
            background-color: #056571;
            color: white;
        }

        .border {
            background-color: white;
        }
        .green {
            background-color: #056571;
            
        }
    </style>
</head>
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2>Book list</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn form-control">Create a new book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td align="center">
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn green btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>


    <div class="col-12" style="text-align: center
    ">
        <br />
        <span class="h3 text-info">OR</span>
        <br />
        <br />
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts
{
    <script src="~/js/bookList.js"></script>
}
